    rw [eventually_nhdsSet_iff_forall] at hP' ‚ä¢
    rintro x ‚ü®hx, hx'‚ü©
    have hx' : ‚àÄ·∂† y in ùìù x, y ‚àà (f '' K)·∂ú := isOpen_iff_eventually.mp op x hx'
    apply ((hP' x hx).and hx').mono
    rintro y ‚ü®hy, hy'‚ü©
    exact hy hy'

